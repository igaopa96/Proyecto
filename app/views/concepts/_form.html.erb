<%= form_with(model: concept, local: true) do |form| %>
  <% if concept.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(concept.errors.count, "error") %> prohibited this concept from being saved:</h2>

      <ul>
        <% concept.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label "Tipo Concepto" %>
    <span class="radio-inline">
      <%= form.radio_button(:tipo, 1) %>
      <%= form.label "Ingreso" %>
    </span>
    <span class="radio-inline">
      <%= form.radio_button(:tipo, 2) %>
      <%= form.label "Egreso" %>
    </span>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_field :descripcion %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
