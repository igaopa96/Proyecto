<%= form_with(model: warranty, local: true) do |form| %>
  <% if warranty.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(warranty.errors.count, "error") %> prohibited this warranty from being saved:</h2>

      <ul>
        <% warranty.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :no_identificacion %>
    <%= form.text_field :no_identificacion %>
  </div>

  <div class="field">
    <%= form.label :fecha_adq %>
    <%= form.date_select :fecha_adq %>
  </div>

  <div class="field">
    <%= form.label "Estado" %>
    <span class="radio-inline">
      <%= form.radio_button(:estado, 'Activa') %>
      <%= form.label "Activa" %>
    </span>
    <span class="radio-inline">
      <%= form.radio_button(:estado, 'Vencida') %>
      <%= form.label "Vencida" %>
    </span>
  </div>

  <div class="field">
    <%= form.label :periodo_dias %>
    <%= form.number_field :periodo_dias %>
  </div>

  <div>
  <%= form.label :referencia %>
  <%= form.file_field :referencia %>
  </div>
<br> <br> <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
